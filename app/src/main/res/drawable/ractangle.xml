<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item android:top="1dp" android:left="1dp">
                <shape>
                    <solid android:color="#2F000000"/>
                    <corners android:radius="15dp"/>
                </shape>
            </item>
            <item>
                <shape>
                    <gradient
                        android:angle="315"
                        android:endColor="#0262e9"
                        android:startColor="#0054ae"
                        android:type="linear" />
                    <corners android:radius="15dp" />
                    <padding android:top="16dp"/>
                    <padding android:left="8dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
